<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="io.mapomi.android.ui.auth.auth.AuthViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/app_padding">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_back"
                android:onClick="@{v->vm.connect.moveBackPage()}"/>
            <TextView
                android:id="@+id/textView"
                style="@style/regular22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/str_ask_auth"
                android:layout_marginBottom="52dp"/>
            <TextView
                style="@style/medium16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_id"
                android:layout_marginBottom="16dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <EditText
                    android:id="@+id/editText"
                    style="@style/medium16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/str_id_hint"
                    android:textColorHint="@color/grey500"
                    android:inputType="text"
                    app:layout_constraintEnd_toStartOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{vm.typedId}"
                    android:onTextChanged="@{(cs,s,e,c) -> vm.typeId(cs)}"/>

                <TextView
                    android:id="@+id/textView2"
                    style="@style/medium12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_default_small"
                    android:text="@string/str_check_duplication"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:onClick="@{v-> vm.checkIdValid()}"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey400"
                    app:layout_constraintTop_toBottomOf="@+id/editText"
                    android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/medium12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_id_valid"
                android:visibility="@{vm.idValid ? 0 : 4}"/>

            <TextView
                style="@style/medium16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_password"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <EditText
                    android:id="@+id/editText2"
                    style="@style/medium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/str_password_hint"
                    android:textColorHint="@color/grey500"
                    android:inputType="textPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{vm.typedPassword}"
                    android:onTextChanged="@{(cs,s,e,c) -> vm.typePassword(cs)}"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey400"
                    app:layout_constraintTop_toBottomOf="@+id/editText2"
                    android:layout_marginTop="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/medium12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_password_valid"
                android:textColor="@{vm.passwordValid ? @color/black : @color/grey500}"
                android:layout_marginBottom="28dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <EditText
                    android:id="@+id/editText3"
                    style="@style/medium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/str_password_check"
                    android:textColorHint="@color/grey500"
                    android:inputType="textPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{vm.typedRePassword}"
                    android:onTextChanged="@{(cs,s,e,c) -> vm.typeRePassword(cs)}"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey400"
                    app:layout_constraintTop_toBottomOf="@+id/editText3"
                    android:layout_marginTop="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/medium12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_password_equal"
                android:visibility="@{vm.passwordSame ? 0 : 8}"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                style="@style/medium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary"
                android:gravity="center"
                android:text="@string/str_next"
                android:textColor="@color/btn_enabled_color"
                android:enabled="@{vm.idValid &amp; vm.passwordValid &amp; vm.passwordSame}"
                android:onClick="@{v->vm.onNext()}"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>