<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="io.mapomi.android.ui.auth.type.TypeViewModel" />
        <variable
            name="type"
            type="io.mapomi.android.enums.Type" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/app_padding"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{v->vm.connect.moveBackPage()}"/>

        <TextView
            android:id="@+id/textView"
            style="@style/regular22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/str_ask_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="37dp">
            <TextView
                style="@style/medium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_disabled"
                android:layout_marginBottom="40dp"
                android:onClick="@{v->vm.selectType(type.DISABLED)}"/>
            <TextView
                style="@style/medium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_companion"
                android:layout_marginBottom="40dp"
                android:onClick="@{v->vm.selectType(type.COMPANION)}"/>
            <TextView
                style="@style/medium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_related"
                android:layout_marginBottom="40dp"
                android:onClick="@{v->vm.selectType(type.RELATED)}"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>