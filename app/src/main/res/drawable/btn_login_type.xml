<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey500"/>
            <corners android:radius="@dimen/btn_radius"/>
            <padding android:top="3dp" android:bottom="3dp" android:right="22dp" android:left="22dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey200"/>
            <stroke android:color="@color/grey400" android:width="1dp"/>
            <corners android:radius="@dimen/btn_radius"/>
            <padding android:top="3dp" android:bottom="3dp" android:right="22dp" android:left="22dp"/>
        </shape>
    </item>

</selector>