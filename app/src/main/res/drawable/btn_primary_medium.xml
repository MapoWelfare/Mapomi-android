<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey200"/>
            <corners android:radius="@dimen/btn_radius"/>
            <padding android:top="10dp" android:bottom="10dp" android:right="20dp" android:left="20dp"/>
        </shape>
    </item>

    <item>
        <ripple android:color="@color/white">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/main1000"/>
                    <corners android:radius="@dimen/btn_radius"/>
                    <padding android:top="10dp" android:bottom="10dp" android:right="20dp" android:left="20dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>