<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape
            android:shape="rectangle">
            <stroke android:color="@color/main900" android:width="1dp"/>
            <corners android:radius="@dimen/btn_radius"/>
            <padding android:top="7dp" android:bottom="7dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/main900"/>
            <corners android:radius="@dimen/btn_radius"/>
            <padding android:top="7dp" android:bottom="7dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>

</selector>