<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey300"/>
            <corners android:radius="@dimen/btn_radius"/>
            <padding android:top="10dp" android:bottom="10dp"/>
            <stroke android:color="@color/grey500" android:width="1dp"/>
        </shape>
    </item>

    <item>
        <ripple android:color="@color/white">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey700"/>
                    <corners android:radius="@dimen/btn_radius"/>
                    <padding android:top="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>